<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timer_frame"
    tools:context=".PomodoroActivity">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_black_circle"
        android:indeterminate="false"
        android:max="100"
        android:progress="200"
        android:progressDrawable="@drawable/drawable_orange_circle"
        android:rotation="-90" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countdown_text"
        android:background="@color/colorTitle"
        android:layout_centerHorizontal="true"
        android:text="start"
        />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:text="RESET"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:background="@color/colorTitle"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:textAllCaps="true"
        android:text="The Pomodoro Technique"
        android:gravity="center"
        android:textColor="@color/colorTitle"
        android:textSize="40sp"
        android:textStyle="bold"
        />




</RelativeLayout>